<?xml version="1.0" encoding="utf-8"?>
<Parameters>
   <StartTime> 0 </StartTime>
   <NumberOfParticles> 5000 </NumberOfParticles> 
   <NumberOfPointsPerGrain> 10 </NumberOfPointsPerGrain>
   <AnalysisTimestep> 20 </AnalysisTimestep>
   <NumberOfTimesteps> 1000 </NumberOfTimesteps>
   <DiscreteSamplingRate> 31  </DiscreteSamplingRate>
   <DomainBorderSize> 7 </DomainBorderSize>
   <MicrostructureGenMode> 1 </MicrostructureGenMode>
   <!-- USAGE:
 	O	E_READ_FROM_FILE,
	1	E_GENERATE_WITH_VORONOY,
	2	E_READ_VERTEX, // The edges need to be ordered
	3	E_GENERATE_TESTCASE,
   -->
   <ReadFromFilename>lsInputQuadrat.dat</ReadFromFilename>
   <LatticeType> 0 </LatticeType>
   <!-- USAGE:
       O               E_CUBIC,
       1               E_HEXAGONAL
   -->
   <HAGB> 1.0 </HAGB>
   <TriplePointDrag> 10000000.0 </TriplePointDrag>
    <!-- USAGE:
        Input is a number larger than 0. This number is the absolute mobility of the point. 1.000.000,0 is approx. infinity
    -->

   <UseMobilityFactor> 0</UseMobilityFactor>
   <!-- USAGE:
	0 == off
    Input is 0 , 1 , 2,  3 as a boolean. Check source code for usage. 
   -->
   <IsIsotropicNetwork> 0 </IsIsotropicNetwork>
    <!-- USAGE:
   	0	considers anisotropic grain boundary properties
   	1	ignores Texture, Energies and Mobilitys. all equal to one. Execution is much faster.
   -->
   <UseTexture> 1 </UseTexture>
   <!-- USAGE:
   	0	generates a random texture
   	1	generates a fibre texture with MaxMisOrientation (angle in degree)
   -->
   <MaxMisOrientation> 25 </MaxMisOrientation>
   <!-- USAGE:
   if Usetexture == 1, you can specify the maximum misorientation for a fibre texture here.
   -->
   <ExecuteInParallel> 1 </ExecuteInParallel>
   <MaximumNumberOfThreads> 8 </MaximumNumberOfThreads>
   <!-- USAGE:
	currently ignored. if ExecuteInParallel == 1, you will take omp_get_max_threads()
	see grainhdl::initEnvironment() modify it there, if you want to specify.
   -->
   <GridCoarsement> 1 </GridCoarsement>
    <!-- USAGE:
    	0	off 
   	1 	the grid is coarse proportional to the network. thus, average discretization of a grain is kept constant. 
   -->
   <GridCoarsementGradient> 0.98 </GridCoarsementGradient> 
   <ConvolutionMode> 0 </ConvolutionMode>   
   <!-- USAGE:
   	O	E_LAPLACE,
	1	E_LAPLACE_RITCHARDSON,
	2	E_GAUSSIAN,
   -->
   <ResearchMode> 0 </ResearchMode>
   <!-- USAGE:
   	0 	Energies defined by misorientation
	1	Energies set to 1 (nessecary for Triple Junction experiments)			
   -->
   <ResearchProject> 0 </ResearchProject>
   <!-- USAGE:
	0	E_NO_PROJECT
   	1 	E_TRIPLE_JUNCTION_DRAG_SINGLE (four sided grain - see paper, outermost triple jucntion are fixed in the corners)
	2	E_TRIPLE_JUNCTION_DRAG_NETWORK	
   -->
   <ConstantSectorRadius> 3 </ConstantSectorRadius>
   <InterpolatingSectorRadius> 2</InterpolatingSectorRadius>
   <NeighbourTracking> 0</NeighbourTracking>
   
</Parameters>
